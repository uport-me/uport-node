{
  "name": "uport-credentials",
  "version": "1.2.2-alpha.1",
  "description": "Library for interacting with uport profiles and attestations",
  "main": "lib/index.js",
  "umd:main": "lib/index.umd.js",
  "modules": "lib/index.mjs",
  "source": "src/index.ts",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "dist",
    "src",
    "esm",
    "tutorial"
  ],
  "scripts": {
    "test": "./node_modules/.bin/jest",
    "test:ci": "./node_modules/.bin/jest -u --coverage",
    "build:js": "./node_modules/.bin/microbundle",
    "build:browser": "./node_modules/.bin/webpack --config webpack.config.js",
    "build": "npm run build:js && npm run test:ci && npm run build:browser",
    "build:docs": "echo 'PLEASE UPDATE REFEREN DOCS MANUALLY'",
    "prepublish": "npm run build",
    "prepare": "npm run build",
    "draft-release-notes": "GREN_GITHUB_TOKEN=$(vault read -field=value secret/mobile/release_token) gren release -d",
    "publish-release-notes": "GREN_GITHUB_TOKEN=$(vault read -field=value secret/mobile/release_token) gren release"
  },
  "author": "Pelle Braendgaard <pelle.braendgaard@consensys.net>",
  "license": "Apache-2.0",
  "dependencies": {
    "did-jwt": "0.2.0",
    "did-resolver": "^0.0.6",
    "elliptic": "^6.4.1",
    "ethr-did-resolver": "^0.2.0",
    "https-did-resolver": "^0.1.0",
    "mnid": "^0.1.1",
    "uport-did-resolver": "^0.0.7",
    "uport-lite": "^1.0.5"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!**/node_modules/**"
    ],
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/nock"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/elliptic": "^6.4.6",
    "@types/jest": "^24.0.11",
    "@types/mockdate": "^2.0.0",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "jest": "^24.7.1",
    "json-loader": "^0.5.4",
    "microbundle": "^0.11.0",
    "mockdate": "^2.0.1",
    "ngrok": "^3.1.0",
    "nock": "^9.4.3",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typedoc": "^0.14.2",
    "typedoc-plugin-markdown": "^1.2.0",
    "typescript": "^3.4.4",
    "uport-transports": "^0.2.4",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0"
  }
}
